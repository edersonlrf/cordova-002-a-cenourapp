<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.edersonfernandes.garconapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Garçonete Só de Cenoura</name>
    <description>
        App para uso das garçonetes dentro do restaurante.
    </description>
    <author email="edersonluis.rf@gmail.com" href="http://www.edersonfernandes.com.br">
        Éderson Fernandes
    </author>

    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />

    <platform name="android">
        <preference name="BackgroundColor" value="0xF2F2F2FF" />
    </platform>

    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
    </platform>
</widget>
